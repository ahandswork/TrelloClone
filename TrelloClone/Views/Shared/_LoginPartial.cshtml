@using Microsoft.AspNetCore.Identity
@using TrelloClone.Infrastructure
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
    { 
        <ul class="right hide-on-med-and-down">
            <li>
                <form asp-controller="User" asp-action="SignOut" method="post">
                    <button type="submit" class="btn-flat white-text" style="margin-right: 10px">Sign Out</button>
                </form>
            </li>
        </ul>
    }
    else
    {
        <ul class="right hide-on-med-and-down">
            <li>
                <button class="btn-flat white-text" asp-action="Register" asp-controller="User">Register</button>
            </li>
            <li>
                <button class="btn-flat white-text" asp-action="Login" asp-controller="User">Login</button>
            </li>
        </ul>
    }